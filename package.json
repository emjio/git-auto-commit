{
  "name": "git-auto-commit",
  "displayName": "git-auto-commit",
  "description": "auto commit your code",
  "author": "emjio",
  "publisher": "emjio",
  "version": "1.1.0",
  "repository": "https://github.com/emjio/git-auto-commit.git",
  "engines": {
    "vscode": "^1.59.0"
  },
  "bugs": "https://github.com/emjio/git-auto-commit/issues",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "license": "MIT",
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "code-auto-commit.runCommit",
        "title": "提交"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "code-auto-commit",
      "properties": {
        "code-auto-commit.commitTimeInterval": {
          "type": "number",
          "default": 3600000,
          "description": "停止写代码后多久自动commit(单位毫秒)"
        },
        "code-auto-commit.autoPush": {
          "type": "boolean",
          "default": false,
          "description": "是否自动推送到当前分支的远程"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "yarn run test-compile && yarn run lint",
    "lint": "eslint src --ext ts --fix",
    "test": "node ./out/test/runTest.js",
    "release": "standard-version",
    "publish": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.59.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "eslint": "^7.27.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2",
    "standard-version": "^7.0.0",
    "ts-loader": "^9.2.2",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0"
  }
}